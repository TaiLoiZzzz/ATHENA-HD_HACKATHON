# ATHENA Platform Environment Configuration
# Copy this file to .env and update the values for your environment

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=athena_db
DB_USER=athena_user
DB_PASSWORD=athena_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production_min_32_chars
JWT_EXPIRES_IN=7d

# Blockchain Configuration
BLOCKCHAIN_NETWORK_URL=http://localhost:7051
BLOCKCHAIN_CHANNEL=athenachannel
BLOCKCHAIN_CHAINCODE=sovtoken

# External Service APIs (Mock configurations)
VIETJET_API_URL=https://api.vietjetair.com/v1
VIETJET_API_KEY=your_vietjet_api_key

HDBANK_API_URL=https://api.hdbank.com.vn/v1
HDBANK_API_KEY=your_hdbank_api_key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (for caching - optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_change_in_production

# Marketplace Configuration
MARKETPLACE_FEE_PERCENT=1.5
MAX_ORDER_AMOUNT=1000000
MIN_ORDER_AMOUNT=1

# Token Configuration
BASE_TOKEN_RATE=10000
PRIME_MULTIPLIER=1.5
SERVICE_BONUSES_RESORT=1.2
SERVICE_BONUSES_INSURANCE=1.1

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
FORCE_UPDATE_VERSION=1.0.0

# Push Notification Configuration
FCM_SERVER_KEY=your_firebase_server_key
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Third-party Integrations
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Monitoring Configuration
SENTRY_DSN=https://your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Development Tools
DEBUG_MODE=true
API_DOCS_ENABLED=true
SWAGGER_UI_ENABLED=true

